<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.etpp">



    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/roundedfood"
        android:label="@string/app_name"
        android:fontFamily="@font/ubuntufont"
        android:roundIcon="@drawable/roundedfood"
        android:supportsRtl="true"

        android:theme="@style/AppTheme"
        tools:targetApi="31">

        <activity
            android:name=".SingleFoodActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:parentActivityName=".ListAddActivity"
            />
        <activity
            android:name=".WeeklySummaryActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:parentActivityName=".ListAddActivity"
            />
        <activity
            android:name=".ClearAllActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:parentActivityName=".ListAddActivity"
            />
        <activity
            android:name=".SearchActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:parentActivityName=".ListAddActivity"
            android:windowSoftInputMode="adjustPan"
            />
        <activity
            android:name=".ByMealActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:parentActivityName=".ListAddActivity"
            />
        <activity
            android:name=".ByDayActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:parentActivityName=".ListAddActivity"
            />
        <activity
            android:name=".CreateFoodActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:parentActivityName=".ListAddActivity"
            />
        <activity
            android:name=".ListAddActivity"
            android:exported="true"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait"
            >



        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

    </application>

</manifest>